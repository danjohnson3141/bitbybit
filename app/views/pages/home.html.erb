.jumbotron:hover {
  background-color:#000;
  opacity:1;
  border-radius:5px;
}

.jumbotron_link {
  color: #C0E93F;
  text-decoration: underline;
}
.jumbotron_link:hover {
  color: white;
  text-decoration: underline;
}
.slide-img {
  height: 400px;
  width: auto;
}
.div-right {
  margin-top: -32px;
  margin-right: 15px;
  font-size: 16px;
  float: right;
  width: 434px;
